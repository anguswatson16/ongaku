<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url();">
    <div class="container">
      <h1>@tune.name</h1>
      <p>@tune.artist</p>
    </div>
  </div>
  <div class="tune_info">
    <%= @tune.name %>
    <%= @tune.artist %>
    <%= @tune.album %>
    <%= @tune.genre %>
    <%= link_to "Delete", tune_path(@tune),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </div>
</div>
